{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "variableID",
            "type": "pickString",
            "description": "What function to run...",
            "default": "-local",
            "options": [
                "-local",
                "-build",
                "--upgrade",
            ]
        },
        {
            "id": "log_level",
            "type": "pickString",
            "description": "Set the logging level...",
            "default": "-info",
            "options": [
                "-info",
                "-debug",
            ]
        },
        {
            "id": "*args",
            "type": "promptString",
            "description": "Any additional args",
            "default": "",
        }
    ],
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Run local.py",
            "program": "./local.py",
            "args": [
                "${input:log_level}",
                "${input:variableID}",
                "${input:*args}"
            ]
        },
        // {
        //     "type": "debugpy",
        //     "request": "launch",
        //     "name": "Run the local.py as DEVELOPMENT",
        //     "program": "./local.py",
        //     "args": [
        //         "-dev",
        //         "${input:variableID2}",
        //         "${input:variableID}"
        //     ]
        // }
    ]
}